= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-signin'}) do |f|
  = devise_error_messages!

  %h2.form-signin-heading Register
  = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email address'
  %p
  = f.password_field :password, class: 'form-control', placeholder: 'Password'
  %p
  = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'

  = f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block'

/= render 'devise/shared/links'
