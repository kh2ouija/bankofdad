= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-signin'}) do |f|

  %h2.form-signin-heading Please sign in
  = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email address'
  %p
  = f.password_field :password, class: 'form-control', placeholder: 'Password'
  = f.hidden_field :remember_me, value: true
  = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
  %br
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Register now", new_registration_path(resource_name), class: 'btn btn-success'
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-default pull-right'
