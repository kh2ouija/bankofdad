!!!
%html
  %head
    %title= @page_title || 'Mr. Bank'
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    /= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'true'
    %link{rel: 'stylesheet', href: '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css', media: 'screen'}
    %link{rel: 'stylesheet', href: '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css', media: 'screen'}
    = csrf_meta_tags
    = stylesheet_link_tag 'jumbotron-narrow', media: 'screen'
    = stylesheet_link_tag 'signin', media: 'screen'

    /[if lt IE9]
      = javascript_include_tag 'html5shiv'
      = javascript_include_tag 'respond.min'
  %body
    .navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle{type: 'button', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: '/'} Mr. Bank
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active
              = link_to 'Home', customers_path
            %li
              %a{href: '#'} About
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.active
                %a= current_user.email
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
            - else
              %li
                = link_to 'Sign in', new_user_session_path
              %li
                = link_to 'Register', new_user_registration_path

    .container
      - if notice
        .alert.alert-success.alert-dismissable
          %button.close{type: 'button', 'data-dismiss' => 'alert', 'aria-hidden' => 'true'}
            &times;
          = notice
      - if alert
        .alert.alert-warning.alert-dismissable
          %button.close{type: 'button', 'data-dismiss' => 'alert', 'aria-hidden' => 'true'}
            &times;
          = alert
      = yield
    %script{src: '//code.jquery.com/jquery.js'}
    %script{src: '//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js'}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    