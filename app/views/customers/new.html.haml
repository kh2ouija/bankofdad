= render 'breadcrumbs', breadcrumbs: {'Customers' => customers_path, 'Create new customer' => nil}
.col-md-6
  = form_for(@customer) do |f|
    - if @customer.errors.any?
      .alert.alert-danger
        %strong= pluralize(@customer.errors.count, "error")
        prohibited this customer from being saved:
        %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg
    
    .form-group
      = f.label :name 
      %br
      = f.text_field :name, class: 'form-control', placeholder: 'Customer\'s name'
    = f.submit 'Create', class: 'btn btn-primary'
    = link_to 'Cancel', customers_path, { class: 'btn btn-default' }
