= render 'breadcrumbs', breadcrumbs: {'Customers' => customers_path, @customer.name => nil}

.row
  .col-lg-12
    .page-header
      %h1= "#{@customer.name}'s account"

.row
  .col-lg-4
    = render 'balance'    
  .col-lg-4
    = render 'interest'
  .col-lg-4
    = render 'allowance'    

%p

.row
  .col-lg-4
    = render 'balance_btns'
  .col-lg-4
    = render 'interest_btns'
  .col-lg-4
    = render 'allowance_btns'

.row
  .col-lg-12
    .page-header
      %h2 Savings

.row
  .col-lg-6
    = render 'deposits'
  .col-lg-6

.row
  .col-lg-12
    .page-header
      %h2 Recent transactions

.row
  .col-lg-12
    = render 'recent_transactions'


%p

.row
  .col-lg-12
    = link_to 'Back to customers', customers_path, class: 'btn btn-default'